@section BodyArea{ 
    @Html.Partial("_Loading")
    <div id="SelectEntityModal" tabindex="-1" role="dialog" aria-hidden="true" class="modal fade">
        <div class="modal-dialog" style="width:750px">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" data-dismiss="modal" aria-label="Close" class="close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    <h4 id="modalTitle" class="modal-title">Seleccionar Entidad</h4>
                </div>
                <div class="modal-body">
                    <!-- START panel-->
                    <div class="panel panel-red">
                        <div class="panel-heading"></div>
                        <div class="panel-body">
                            <div class="table-responsive" style="overflow-y:scroll;  max-height:350px !important">
                                <table id="entityTable" class="table table-striped table-hover" role="grid">
                                    <thead>
                                        <tr>
                                            <th><strong>Recurso</strong></th>
                                            <th><strong>Nombre</strong></th>
                                            <th><strong>Num. Hijos</strong></th>
                                        </tr>
                                    </thead>
                                    <tbody></tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                    <!-- END panel-->
                    <div class="form-group" style="text-align:right;">
                        <div id="buttonPanelBP">
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" data-dismiss="modal" class="btn btn-default" id="modalAccept">Aceptar</button>
                    <button type="button" data-dismiss="modal" class="btn btn-default">Cerrar</button>
                </div>
            </div>
        </div>
    </div>
}

@section Scripts{ 
    <script>
        var global = {};
        $(document).ready(function () {

            global.item = {
                id: "",
                name: "",
                uri: ""
            };

            global.table = $('#entityTable').DataTable();

            $('#entityTable tbody').on('click', 'tr', function () {
                if ($(this).hasClass('selected')) {
                    $(this).removeClass('selected');
                }
                else {
                    global.table.$('tr.selected').removeClass('selected');
                    $(this).addClass('selected');
                }
            });
            $('#modalAccept').bind('click', function () {
                console.log('Estoy en el boton' + global.item.id);
                data = global.table.rows('.selected').data()[0];
                console.log(data);
                $('#' + global.item.id + ' #txtName').val(data.name);
                $('#' + global.item.id + ' #txtUri').val(data.uri);
                global.item.id
            });
        });

        var setDataTable = function (content) {
            console.log('Antes de crear la tabla');
            console.log(content);

            global.table = $('#entityTable').DataTable();
            global.table.destroy();

            global.table = $('#entityTable').DataTable({
                autoWidth: true,
                ordering: true,
                data: content,
                columnDefs: [{
                    targets: 0,
                    render: function (data, type, row) {
                        return type === 'display' && data.length > 10 ?
                            data.substr(0, 47) + '…' :
                            data;
                    }
                }],
                columns: [
                    { data: 'uri' },
                    { data: 'name' }
                ]
            });

            $('#SelectEntityModal').modal('show');
        }

        var getEntities = function (action, id) {

            global.item.id = id;

            var string = '@Url.Action("GetOrders", "Ontology")';
            string = string.replace("getorders", action);
            console.log(string);
            $.ajax({
                type: 'GET',
                url: string,
                contentType: 'application/json;charset=utf-8',
                dataType: 'json',

                beforeSend: function () {
                    $('#Loading').modal('show');
                    console.log(this.data);
                },

                success: function (data, id) {
                    $('#Loading').modal('hide');
                    var result = data.data;
                    if (data.error.code == 200) {
                        console.log(result);
                        setDataTable(result);
                    }
                    else {
                        swal("Error!", 'Ocurrio un error al cargar tus datos...', "error");
                    }
                },

                error: function (jqXHR, textStatus, errorThrown) {
                    $('#Loading').modal('hide');
                    swal("Error!", errorThrown, "error");
                    console.log("getData" + " errorThrown: " + errorThrown + " jqXHR: " + jqXHR + " textStatus " + textStatus);
                }
            });
        }
    </script>
}
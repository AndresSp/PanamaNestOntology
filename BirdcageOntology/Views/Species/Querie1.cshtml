
@{
    ViewData["Title"] = "Querie 1";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Querie 1</h1>
            <h4>Select the taxonomy of the species </h4>
        </div>
    </div>
    <div class="row" id="panel_generalInfo">
        <div class="col-lg-12">
         
            <div class="panel-body">
                <div>

                    <div class="row" style="margin-bottom:15px">
                        <div class="col-md-6">
                            <div class="row">
                                <label class="col-md-5 control-label text-right">Belongs to Order</label>
                                <div class="col-md-6">
                                    <input type="text" class="form-control" id="txtOrder" maxlength="35" readonly />
                                    <input type="hidden" id="txtOrderUri" />
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="row">
                                <div class="col-md-3">
                                    <button type="button" class="btn btn-primary" onclick="getEntities()">
                                        <i class="fa fa-th-list"></i> Select
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row" style="margin-bottom:15px">
                        <div class="col-md-6">
                            <div class="row">
                                <label class="col-md-5 control-label text-right">Belongs to Family</label>
                                <div class="col-md-6">
                                    <input type="text" class="form-control" id="txtFamily" maxlength="35" readonly />
                                    <input type="hidden" id="txtFamilyUri" />
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="row">
                                <div class="col-md-3">
                                    <button type="button" class="btn btn-primary" onclick="getEntities()">
                                        <i class="fa fa-th-list"></i> Select
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row" style="margin-bottom:15px">
                        <div class="col-md-6">
                            <div class="row">
                                <label class="col-md-5 control-label text-right">Belongs to Genus</label>
                                <div class="col-md-6">
                                    <input type="text" class="form-control" id="txtGenus" maxlength="35" readonly />
                                    <input type="hidden" id="txtGenusUri" />
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="row">
                                <div class="col-md-3">
                                    <button type="button" class="btn btn-primary" onclick="getEntities()">
                                        <i class="fa fa-th-list"></i> Select
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row" style="margin-bottom:15px">
                        <button type="button" class="btn btn-primary" onclick="" style="margin-left:290px;width:300px">
                            <i class="fa fa-search"></i> Search
                        </button> 
                    </div>
              

                </div>
            </div>
            @*<div class="panel-footer">Footer del panel</div>*@
        </div>
    </div>
    <div class="table-responsive" style="overflow-y:scroll;  max-height:350px !important">
        <table id="entityTable" class="table table-striped table-hover">
            <thead>
                <tr>
                    <th><strong>URI</strong></th>
                    <th><strong>Binomial Name</strong></th>
                    <th><strong>Common Name</strong></th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
    </div>
</div>
@section Scripts{ 
    <script type="text/javascript">
        var showModal = function(modalName) {
            $('#' + modalName).modal('show');
        }

        var loadEntityModal = function(data){
            $('#entityTable tbody').DataTable({
                data: data,
                columns: [
                    { data: 'uri' },
                    { data: 'resouceName' },
                    { data: 'childNumber' }
                ]
            }); 
            $('#SelectEntityModal').modal('show');
        }

        var getEntities = function (filter = '') {

            var entityFilter = {
                'entity': 'Order',
                'filter': [{
                    'propertyName': 'hasParent',
                    'value': 'Oscar'
                }]
            };

            $.ajax({
                type: 'POST',
                url: '@Url.Action("GetOrders", "Ontology")',
                data: JSON.stringify(entityFilter),
                contentType: 'application/json;charset=utf-8',
                dataType: 'json',

                beforeSend: function () {
                    $('#Loading').modal('show');
                    console.log(this.data);
                },

                success: function (data) {
                    $('#Loading').modal('hide');
                    var result = data.data;
                    var code = JSON.stringify(data.error.code);
                    if (code == 200) {                       
                        console.log(result);
                        loadEntityModal(result);
                    }
                },

                error: function (jqXHR, textStatus, errorThrown) {
                    $('#Loading').modal('hide');
                    console.log("getData" + " errorThrown: " + errorThrown + " jqXHR: " + jqXHR + " textStatus " + textStatus);
                }
            });
        }
    </script>
}

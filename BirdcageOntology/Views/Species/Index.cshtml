@{
    ViewData["Title"] = "Species";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Añadir Especie</h1>
            <h4>Describa la taxonomía de la especie</h4>
        </div>
    </div>
    <div class="row" id="panel_generalInfo">
        <div class="col-lg-12">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    Información de la Especie
                </div>
            </div>
            <div class="panel-body">
                <div>
                    <div class="row" style="margin-bottom:15px">
                        <div class="col-md-6">
                            <div class="row">
                                <label class="col-sm-5 control-label text-right">Nombre Científico</label>
                                <div class="col-sm-6">
                                    <input type="text" class="form-control" id="txtBiName" maxlength="50" />
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="row">
                                <div class="col-sm-4">
                                    <label control-label text-right">Nombre Común</label>
                                </div>
                                <div class="col-sm-6">
                                    <input type="text" class="form-control" id="txtCommonName" maxlength="50" />
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row" style="margin-bottom:15px">
                        <div class="col-md-6">
                            <div class="row" id="Order">
                                <label class="col-md-5 control-label text-right">Pertenece al Order</label>
                                <div class="col-md-6">
                                    <input type="text" class="form-control" id="txtName" maxlength="35" readonly />
                                    <input type="hidden" id="txtUri" />
                                    <input type="hidden" id="txtExist" />
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="row">
                                <div class="col-md-3">
                                    <button type="button" class="btn btn-primary" onclick="getEntities('getorders', 'Order')">
                                        <i class="fa fa-th-list"></i> Seleccionar
                                    </button>
                                </div>
                                <div class="col-md-3">
                                    <button type="button" class="btn btn-primary" onclick="showNewEntityModal('Añadir Orden', 'Order')">
                                        <i class="fa fa-plus"></i> Añadir Nuevo
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row" style="margin-bottom:15px">
                        <div class="col-md-6">
                            <div class="row" id="Family">
                                <label class="col-md-5 control-label text-right">Pertenece a la Familia</label>
                                <div class="col-md-6">
                                    <input type="text" class="form-control" id="txtName" maxlength="35" readonly />
                                    <input type="hidden" id="txtUri" />
                                    <input type="hidden" id="txtExist" />
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="row">
                                <div class="col-md-3">
                                    <button type="button" class="btn btn-primary" onclick="getEntities('getfamilies', 'Family')">
                                        <i class="fa fa-th-list"></i> Seleccionar
                                    </button>
                                </div>
                                <div class="col-md-3">
                                    <button type="button" class="btn btn-primary" onclick="showNewEntityModal('Añadir Familia', 'Family')">
                                        <i class="fa fa-plus"></i> Añadir Nuevo
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row" style="margin-bottom:15px">
                        <div class="col-md-6">
                            <div class="row" id="Gen">
                                <label class="col-md-5 control-label text-right">Pertenece al Gen</label>
                                <div class="col-md-6">
                                    <input type="text" class="form-control" id="txtName" maxlength="35" readonly />
                                    <input type="hidden" id="txtUri" />
                                    <input type="hidden" id="txtExist" />
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="row">
                                <div class="col-md-3">
                                    <button type="button" class="btn btn-primary" onclick="getEntities('GetGenus', 'Gen')">
                                        <i class="fa fa-th-list"></i> Seleccionar
                                    </button>
                                </div>
                                <div class="col-md-3">
                                    <button type="button" class="btn btn-primary" onclick="showNewEntityModal('Añadir Gen', 'Gen')">
                                        <i class="fa fa-plus"></i> Añadir Nuevo
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            @*<div class="panel-footer">Footer del panel</div>*@
        </div>
    </div>

    <div class="row" id="panel_featuresInfo">
        <div class="col-lg-12">
            <div class="panel panel-red">
                <div class="panel-heading">
                    Características de la Especie
                </div>
            </div>
            <div class="panel-body">
                <div>
                    <div class="row">
                        <div class="col-md-12">
                            <ul class="nav nav-pills">
                                <li class="active">
                                    <a href="#tabHabitat" data-toggle="tab" aria-expanded="true">Habitat</a>
                                </li>
                                <li>
                                    <a href="#tabRegion" data-toggle="tab" aria-expanded="false">Región</a>
                                </li>
                                <li>
                                    <a href="#tabInfo" data-toggle="tab" aria-expanded="false">Info.Adicional</a>
                                </li>
                            </ul>
                            <div class="tab-content">
                                <div class="tab-pane fade in active" id="tabHabitat">
                                    <h4>Seleccione el Habitad</h4>
                                    <p>Seleccione el habitad por favor</p>
                                </div>
                                <div class="tab-pane" id="tabRegion">
                                    <h4>Seleccione la Región</h4>
                                    <p>Seleccione la region por favor</p>
                                </div>
                                <div class="tab-pane" id="tabInfo">
                                    <div class="row" style="margin-bottom:15px; margin-top:15px">
                                        <div class="col-md-6">
                                            <label class="col-md-5 control-label text-right">Tamaño Promedio</label>
                                            <div class="col-md-6">
                                                <input type="text" class="col-md-3 form-control" id="txtAvgSize" maxlength="10" />
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <label class="col-md-5 control-label text-right">Color Promedio</label>
                                            <div class="col-md-6">
                                                <input type="text" class="form-control" id="txtAvgColor" maxlength="10" />
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            @*<div class="panel-footer">Footer del panel</div>*@
        </div>
    </div>

    <div>
        <div class="row">
            <div class="col-md-offset-8 col-md-3">
                <button type="button" class="btn btn-danger" onclick="createSpecie()">
                    <i class="fa fa-plus"></i> Crear
                </button>
            </div>
        </div>
    </div>
</div>


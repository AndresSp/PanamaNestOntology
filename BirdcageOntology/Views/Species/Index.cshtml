@{
    ViewData["Title"] = "Species";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Añadir Especie</h1>
            <h4>Describa la taxonomía de la especie</h4>
        </div>
    </div>
    <div class="row" id="panel_generalInfo">
        <div class="col-lg-12">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    Información de la Especie
                </div>
            </div>
            <div class="panel-body">
                <div>
                    <div class="row" style="margin-bottom:15px">
                        <div class="col-md-6">
                            <div class="row">
                                <label class="col-sm-5 control-label text-right">Nombre Científico</label>
                                <div class="col-sm-6">
                                    <input type="text" class="form-control" id="resourceName" maxlength="50" />
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="row">
                                <div class="col-sm-4">
                                    <label control-label text-right">Nombre Común</label>
                                </div>
                                <div class="col-sm-6">
                                    <input type="text" class="form-control" id="resourceName" maxlength="50" />
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row" style="margin-bottom:15px">
                        <div class="col-md-6">
                            <div class="row" id="Order">
                                <label class="col-md-5 control-label text-right">Pertenece al Order</label>
                                <div class="col-md-6">
                                    <input type="text" class="form-control" id="txtName" maxlength="35" readonly />
                                    <input type="hidden" id="txtUri" />
                                    <input type="hidden" id="txtExist" />
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="row">
                                <div class="col-md-3">
                                    <button type="button" class="btn btn-primary" onclick="getEntities('GetOrders')">
                                        <i class="fa fa-th-list"></i> Seleccionar
                                    </button>
                                </div>
                                <div class="col-md-3">
                                    <button type="button" class="btn btn-primary" onclick="showNewEntityModal('Añadir Orden', 'Order')">
                                        <i class="fa fa-plus"></i> Añadir Nuevo
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row" style="margin-bottom:15px">
                        <div class="col-md-6">
                            <div class="row" id="Family">
                                <label class="col-md-5 control-label text-right">Pertenece a la Familia</label>
                                <div class="col-md-6">
                                    <input type="text" class="form-control" id="txtName" maxlength="35" readonly />
                                    <input type="hidden" id="txtUri" />
                                    <input type="hidden" id="txtExist" />
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="row">
                                <div class="col-md-3">
                                    <button type="button" class="btn btn-primary" onclick="getEntities('GetFamilies')">
                                        <i class="fa fa-th-list"></i> Seleccionar
                                    </button>
                                </div>
                                <div class="col-md-3">
                                    <button type="button" class="btn btn-primary" onclick="showNewEntityModal('Añadir Familia', 'Family')">
                                        <i class="fa fa-plus"></i> Añadir Nuevo
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row" style="margin-bottom:15px">
                        <div class="col-md-6">
                            <div class="row" id="Gen">
                                <label class="col-md-5 control-label text-right">Pertenece al Gen</label>
                                <div class="col-md-6">
                                    <input type="text" class="form-control" id="txtName" maxlength="35" readonly />
                                    <input type="hidden" id="txtUri" />
                                    <input type="hidden" id="txtExist" />
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="row">
                                <div class="col-md-3">
                                    <button type="button" class="btn btn-primary" onclick="getEntities('GetGenus')">
                                        <i class="fa fa-th-list"></i> Seleccionar
                                    </button>
                                </div>
                                <div class="col-md-3">
                                    <button type="button" class="btn btn-primary" onclick="showNewEntityModal('Añadir Gen', 'Gen')">
                                        <i class="fa fa-plus"></i> Añadir Nuevo
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            @*<div class="panel-footer">Footer del panel</div>*@
        </div>
    </div>

    <div class="row" id="panel_featuresInfo">
        <div class="col-lg-12">
            <div class="panel panel-red">
                <div class="panel-heading">
                    Características de la Especie
                </div>
            </div>
            <div class="panel-body">
                <div>
                    <div class="row">
                        <div class="col-md-12">
                            <ul class="nav nav-pills">
                                <li class="active">
                                    <a href="#tabHabitat" data-toggle="tab" aria-expanded="true">Habitat</a>
                                </li>
                                <li>
                                    <a href="#tabRegion" data-toggle="tab" aria-expanded="false">Región</a>
                                </li>
                                <li>
                                    <a href="#tabInfo" data-toggle="tab" aria-expanded="false">Info.Adicional</a>
                                </li>
                            </ul>
                            <div class="tab-content">
                                <div class="tab-pane fade in active" id="tabHabitat">
                                    <h4>Seleccione el Habitad</h4>
                                    <p>Seleccione el habitad por favor</p>
                                </div>
                                <div class="tab-pane" id="tabRegion">
                                    <h4>Seleccione la Región</h4>
                                    <p>Seleccione la region por favor</p>
                                </div>
                                <div class="tab-pane" id="tabInfo">
                                    <div class="row" style="margin-bottom:15px; margin-top:15px">
                                        <div class="col-md-6">
                                            <label class="col-md-5 control-label text-right">Tamaño Promedio</label>
                                            <div class="col-md-6">
                                                <input type="text" class="col-md-3 form-control" id="txtAvgSize" maxlength="10" />
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <label class="col-md-5 control-label text-right">Color Promedio</label>
                                            <div class="col-md-6">
                                                <input type="text" class="form-control" id="txtAvgColor" maxlength="10" />
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            @*<div class="panel-footer">Footer del panel</div>*@
        </div>
    </div>
</div>

@section BodyArea {
    <!-- Modal Large-->
    @Html.Partial("_Loading")
    <div id="EntityModal" tabindex="-1" role="dialog" aria-hidden="true" class="modal fade">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" data-dismiss="modal" aria-label="Close" class="close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    <h4 id="modalTitle" class="modal-title">Añadir Entidad</h4>
                </div>
                <div class="modal-body">
                    <label>Nombre del Recurso</label>
                    <input type="text" class="form-control" maxlength="35" id="txtContent" />
                    @*<!-- START panel-->
                        <div class="panel panel-red">
                            <div class="panel-heading"></div>
                            <div class="panel-body">

                            </div>
                        </div>
                        <!-- END panel-->*@
                    <div class="form-group" style="text-align:right;">
                        <div id="buttonPanelBP">
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" data-dismiss="modal" class="btn btn-default" id="btnAccept">Aceptar</button>
                    <button type="button" data-dismiss="modal" class="btn btn-default">Cerrar</button>
                </div>
            </div>
        </div>
    </div>

    <div id="SelectEntityModal" tabindex="-1" role="dialog" aria-hidden="true" class="modal fade">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" data-dismiss="modal" aria-label="Close" class="close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    <h4 id="modalTitle" class="modal-title">Seleccionar Entidad</h4>
                </div>
                <div class="modal-body">
                    <!-- START panel-->
                    <div class="panel panel-red">
                        <div class="panel-heading"></div>
                        <div class="panel-body">
                            <div class="table-responsive" style="overflow-y:scroll;  max-height:350px !important">
                                <table id="entityTable" class="table table-striped table-hover">
                                    <thead>
                                        <tr>
                                            <th><strong>Recurso</strong></th>
                                            <th><strong>Nombre</strong></th>
                                            <th><strong>Num. Hijos</strong></th>
                                        </tr>
                                    </thead>
                                    <tbody></tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                    <!-- END panel-->
                    <div class="form-group" style="text-align:right;">
                        <div id="buttonPanelBP">
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" data-dismiss="modal" class="btn btn-default">Cerrar</button>
                </div>
            </div>
        </div>
    </div>
}

@section Scripts{
    <script type="text/javascript">
        var showNewEntityModal = function (modalTitle, id) {
            $('#EntityModal').modal('show');
            $('#EntityModal #modalTitle').html(modalTitle);

            console.log('Antes de setiar onclick');
            $('#EntityModal #btnAccept').bind('click', function () { setModalData(id, 'false') });
        }

        var setModalData = function (id, exist) {
            console.log('Se ejecuto el click ' + id);
            $('#' + id + ' #txtName').val($('#EntityModal #txtContent').val());
            $('#' + id + ' #Exist').val(exist);
            $('#EntityModal #btnAccept').unbind('click');

            //Clean up
            $('#EntityModal #txtContent').val('');
        }

        var getEntities = function (action) {

            var link = '@Url.Action("action", "Ontology")';
            link.replace("action", action);

            $.ajax({
                type: 'POST',
                url: link,
                contentType: 'application/json;charset=utf-8',
                dataType: 'json',

                beforeSend: function () {
                    $('#Loading').modal('show');
                    console.log(this.data);
                },

                success: function (data) {
                    $('#Loading').modal('hide');
                    var result = data.data;
                    var code = JSON.stringify(data.error.code);
                    if (code == 200) {
                        console.log(result);
                    }
                },

                error: function (jqXHR, textStatus, errorThrown) {
                    $('#Loading').modal('hide');
                    console.log("getData" + " errorThrown: " + errorThrown + " jqXHR: " + jqXHR + " textStatus " + textStatus);
                }
            });
        }
    </script>
}

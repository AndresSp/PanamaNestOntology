@{
    ViewData["Title"] = "Species";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Add New Specie</h1>
            <h4>Decribe the Species Taxon</h4>
        </div>
    </div>
    <div class="row" id="panel_generalInfo">
        <div class="col-lg-12">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    Species Information
                </div>
            </div>
            <div class="panel-body">
                <div>
                    <div class="row" style="margin-bottom:15px">
                        <div class="col-md-6">
                            <div class="row">
                                <label class="col-sm-5 control-label text-right">Binomial Name</label>
                                <div class="col-sm-6">
                                    <input type="text" class="form-control" id="txtBiName" maxlength="50" />
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="row">
                                <div class="col-sm-4">
                                    <label control-label text-right">Common Name</label>
                                </div>
                                <div class="col-sm-6">
                                    <input type="text" class="form-control" id="txtCommonName" maxlength="50" />
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row" style="margin-bottom:15px">
                        <div class="col-md-6">
                            <div class="row" id="Order">
                                <label class="col-md-5 control-label text-right">Belongs to Order</label>
                                <div class="col-md-6">
                                    <input type="text" class="form-control" id="txtName" maxlength="35" readonly />
                                    <input type="hidden" id="txtUri" />
                                    <input type="hidden" id="txtExist" />
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="row">
                                <div class="col-md-3">
                                    <button type="button" class="btn btn-primary" onclick="getEntities('getorders', 'Order')">
                                        <i class="fa fa-th-list"></i> Choose
                                    </button>
                                </div>
                                <div class="col-md-3">
                                    <button type="button" class="btn btn-primary" onclick="showNewEntityModal('Añadir Orden', 'Order')">
                                        <i class="fa fa-plus"></i> Add New
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row" style="margin-bottom:15px">
                        <div class="col-md-6">
                            <div class="row" id="Family">
                                <label class="col-md-5 control-label text-right">Belongs to Family</label>
                                <div class="col-md-6">
                                    <input type="text" class="form-control" id="txtName" maxlength="35" readonly />
                                    <input type="hidden" id="txtUri" />
                                    <input type="hidden" id="txtExist" />
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="row">
                                <div class="col-md-3">
                                    <button type="button" class="btn btn-primary" onclick="getEntities('getfamilies', 'Family')">
                                        <i class="fa fa-th-list"></i> Choose
                                    </button>
                                </div>
                                <div class="col-md-3">
                                    <button type="button" class="btn btn-primary" onclick="showNewEntityModal('Añadir Familia', 'Family')">
                                        <i class="fa fa-plus"></i> Add New
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row" style="margin-bottom:15px">
                        <div class="col-md-6">
                            <div class="row" id="Gen">
                                <label class="col-md-5 control-label text-right">Belong to Genus</label>
                                <div class="col-md-6">
                                    <input type="text" class="form-control" id="txtName" maxlength="35" readonly />
                                    <input type="hidden" id="txtUri" />
                                    <input type="hidden" id="txtExist" />
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="row">
                                <div class="col-md-3">
                                    <button type="button" class="btn btn-primary" onclick="getEntities('GetGenus', 'Gen')">
                                        <i class="fa fa-th-list"></i> Choose
                                    </button>
                                </div>
                                <div class="col-md-3">
                                    <button type="button" class="btn btn-primary" onclick="showNewEntityModal('Añadir Gen', 'Gen')">
                                        <i class="fa fa-plus"></i> Add New
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            @*<div class="panel-footer">Footer del panel</div>*@
        </div>
    </div>

    <div class="row" id="panel_featuresInfo">
        <div class="col-lg-12">
            <div class="panel panel-red">
                <div class="panel-heading">
                    Species Features
                </div>
            </div>
            <div class="panel-body">
                <div>
                    <div class="row">
                        <div class="col-md-4">
                            <span>Select Region</span>
                            <div>
                                <ul id="regionContainer">

                                </ul>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <span>Select Habitat</span>
                            <div>
                                <ul id="habitatContainer">

                                </ul>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <span>Additional Info</span>
                            <div class="row" style="margin-top:15px; margin-bottom:15px">
                                <label class="col-md-3 control-label text-right">Avg. Size</label>
                                <div class="col-md-6">
                                    <input type="text" class="col-md-3 form-control" id="txtAvgSize" maxlength="10" />
                                </div>
                            </div>
                            <div class="row" style="margin-bottom:15px">
                                <label class="col-md-3 control-label text-right">Body Color</label>
                                <div class="col-md-6">
                                    <input type="text" class="col-md-3 form-control" id="txtBodyColor" maxlength="10" />
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12">
                                    <button type="button" class="btn btn-danger btn-block" onclick="createSpecie()">
                                        <i class="fa fa-plus"></i> Crear
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            @*<div class="panel-footer">Footer del panel</div>*@
        </div>
    </div>
</div>



@{
    ViewData["Title"] = "ViewSpecie";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">View Species</h1>
        <h4>Select the taxonomy of the species</h4>
    </div>
</div>
<div class="row" id="pSearch">
    <div class="col-lg-12">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <div>
                    Species Data
                </div>
            </div>
        </div>
    </div>
    <div class="panel-body">
        <div>
            <div class="row" style="margin-bottom:15px">
                <div class="col-md-6">
                    <div class="row">
                        <label class="col-md-5 control-label text-right">Belongs to Order</label>
                        <div class="col-md-6">
                            <input type="text" class="form-control" id="pOrden" maxlength="35" readonly />
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="row">
                        <div class="col-md-3">
                            <button type="button" class="btn btn-primary" onclick="help('Belongs to Order')">
                                <i class="fa fa-th-list"></i> Select
                            </button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row" style="margin-bottom:15px">
                <div class="col-md-6">
                    <div class="row">
                        <label class="col-md-5 control-label text-right">Belongs to Family</label>
                        <div class="col-md-6">
                            <input type="text" class="form-control" id="pFamilia" maxlength="35" readonly />
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="row">
                        <div class="col-md-3">
                            <button type="button" class="btn btn-primary" onclick="help('Belongs to Family')">
                                <i class="fa fa-th-list"></i> Select
                            </button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row" style="margin-bottom:15px">
                <div class="col-md-6">
                    <div class="row">
                        <label class="col-md-5 control-label text-right">Belongs to Genus</label>
                        <div class="col-md-6">
                            <input type="text" class="form-control" id="pGen" maxlength="35" readonly />
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="row">
                        <div class="col-md-3">
                            <button type="button" class="btn btn-primary" onclick="help('Belongs to Genus')">
                                <i class="fa fa-th-list"></i> Select
                            </button>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="row">
                        <div class="col-md-3">
                            <button type="button" class="btn btn-danger" onclick="help('Search')">
                                <i class="fa fa-search"></i> Search
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row" id="pResults">
    <div class="col-lg-12">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <div>
                    Species Results
                </div>
            </div>
        </div>
        <div class="panel-body">
            <div>
                <div class="row" style="margin-bottom:15px">
                    <div class="col-md-6">
                        <div class="row">
                            <label class="col-sm-5 control-label text-right">Binomial name</label>
                            <div class="col-sm-6">
                                <input type="text" class="form-control" id="txtCientifico" maxlength="50" readonly />
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="row">
                            <label class="col-sm-3 control-label text-right">Common name</label>
                            <div class="col-sm-6">
                                <input type="text" class="form-control" id="txtComun" maxlength="50" readonly />
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row" style="margin-bottom:15px">
                    <div class="col-md-6">
                        <div class="row">
                            <label class="col-sm-5 control-label text-right">Genus</label>
                            <div class="col-sm-6">
                                <input type="text" class="form-control" id="txtGen" maxlength="50" readonly />
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="row">
                            <label class="col-sm-3 control-label text-right">Size</label>
                            <div class="col-sm-6">
                                <input type="text" class="form-control" id="txtTamano" maxlength="50" readonly />
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row" style="margin-bottom:15px">
                    <div class="col-md-6">
                        <div class="row">
                            <label class="col-sm-5 control-label text-right">Species</label>
                            <div class="col-sm-6">
                                <input type="text" class="form-control" id="txtEspecie" maxlength="50" readonly />
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="row">
                            <label class="col-sm-3 control-label text-right">Habitat</label>
                            <div class="col-sm-6">
                                <input type="text" class="form-control" id="txtHabitat" maxlength="50" readonly />
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row" style="margin-bottom:15px">
                    <div class="col-md-6">
                        <div class="row">
                            <label class="col-sm-5 control-label text-right">Order</label>
                            <div class="col-sm-6">
                                <input type="text" class="form-control" id="txtOrden" maxlength="50" readonly />
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="row">
                            <label class="col-sm-3 control-label text-right">Countries</label>
                            <div class="col-sm-6">
                                <input type="text" class="form-control" id="txtPaises" maxlength="50" readonly />
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row" style="margin-bottom:15px">
                    <div class="col-md-6">
                        <div class="row">
                            <label class="col-sm-5 control-label text-right">Family</label>
                            <div class="col-sm-6">
                                <input type="text" class="form-control" id="txtFamilia" maxlength="50" readonly />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>




@section BodyArea {
    <!-- Modal Large-->
    @Html.Partial("_Loading")

    <div id="SelectEntityModal" tabindex="-1" role="dialog" aria-hidden="true" class="modal fade">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" data-dismiss="modal" aria-label="Close" class="close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    <h4 id="modalTitle" class="modal-title">Seleccionar Entidad</h4>
                </div>
                <div class="modal-body">
                    <!-- START panel-->
                    <div class="panel panel-red">
                        <div class="panel-heading"></div>
                        <div class="panel-body">
                            <div class="table-responsive" style="overflow-y:scroll;  max-height:350px !important">
                                <table id="entityTable" class="table table-striped table-hover">
                                    <thead>
                                        <tr>
                                            <th><strong>Uri</strong></th>
                                            <th><strong>Nombre</strong></th>
                                            <th><strong>Num. Hijos</strong></th>
                                        </tr>
                                    </thead>
                                    <tbody></tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                    <!-- END panel-->
                    <div class="form-group" style="text-align:right;">
                        <div id="buttonPanelBP">
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" data-dismiss="modal" class="btn btn-default">Close</button>
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
    <script>

        var help = function (string) {
            $('#SelectEntityModal').modal('show');
            $('#modalTitle').html(string);

        }
    </script>

}


@{
    ViewData["Title"] = "Querie 2";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Querie 2</h1>
            <h4>Select the features of the species </h4>
        </div>
    </div>
    <div class="row" id="panel_generalInfo" >
        <div class="col-lg-12">

            <div class="panel-body">
                <div>

                    <div class="row" style="margin-bottom:15px" >
                        <div class="col-md-6">
                            <div class="row">
                                <label class="col-md-5 control-label text-right">Habitat of the species</label>
                                <div class="col-md-6">
                                    <input type="text" class="form-control" id="txtHabitat" maxlength="35" readonly />
                                    <input type="hidden" id="txtHabitatUri" />
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="row">
                                <div class="col-md-3">
                                    <button type="button" class="btn btn-primary" onclick="getEntities()">
                                        <i class="fa fa-th-list"></i> Select
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row" style="margin-bottom:15px">
                        <div class="col-md-6">
                            <div class="row">
                                <label class="col-md-5 control-label text-right">Location of the species</label>
                                <div class="col-md-6">
                                    <input type="text" class="form-control" id="txtLocation" maxlength="35" readonly />
                                    <input type="hidden" id="txtLocationUri" />
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="row">
                                <div class="col-md-3">
                                    <button type="button" class="btn btn-primary" onclick="getEntities()">
                                        <i class="fa fa-th-list"></i> Select
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row" style="margin-bottom:15px">
                        <div class="col-md-6">
                            <div class="row">
                                <label class="col-md-5 control-label text-right">Size of the species</label>
                                <div class="col-md-6">
                                    <input type="text" class="form-control" id="txtSize" maxlength="35" readonly />
                                    <input type="hidden" id="txtSizeUri" />
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="row">
                                <div class="col-md-3">
                                    <button type="button" class="btn btn-primary" onclick="getEntities()">
                                        <i class="fa fa-th-list"></i> Select
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row" style="margin-bottom:15px">
                        <button type="button" class="btn btn-primary" onclick="" style="margin-left:290px;width:300px">
                            <i class="fa fa-search"></i> Search
                        </button>
                    </div>


                </div>
            </div>
            @*<div class="panel-footer">Footer del panel</div>*@
        </div>
    </div>

    <div class="table-responsive" style="overflow-y:scroll;  max-height:350px !important">
        <table id="entityTable" class="table table-striped table-hover">
            <thead>
                <tr>
                    <th><strong>URI</strong></th>
                    <th><strong>Binomial Name</strong></th>
                    <th><strong>Common Name</strong></th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
    </div>
</div>

